<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (hotels.length > 0) { %>
            <div class="grid">
                <% for (let hotel of hotels) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= hotel.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= hotel.imageUrl %>"
                                alt="No Image Found">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">Rs. <%= hotel.price %></h2>
                            <p class="product__description"><%= hotel.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/admin/edit-hotel/<%= hotel.id %>" class="btn">Edit</a>
                            <form action="/admin/delete-hotel" method="post">
                              <button class="btn" type="submit">Delete</button>
                           </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>